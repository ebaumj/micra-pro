{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "codegen", "^codegen", "typecheck", "restore"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build", "codegen", "^codegen"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build", "^build"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "codegen": { "dependsOn": ["^codegen", "^build"], "cache": true },
    "publish": { "dependsOn": ["build"], "cache": false },
    "serve": { "dependsOn": ["^codegen"] },
    "@nx-dotnet/core:test": {
      "options": { "noBuild": true, "verbosity": "quiet" },
      "dependsOn": ["build"]
    },
    "@nx-dotnet/core:build": {
      "outputs": ["{projectRoot}/bin", "{projectRoot}/obj"],
      "dependsOn": ["^build", "codegen", "^codegen"],
      "options": { "verbosity": "quiet" }
    },
    "@nx/eslint:lint": {
      "cache": true,
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default"],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"]
  },
  "workspaceLayout": { "appsDir": "apps", "libsDir": "libs" },
  "plugins": [
    {
      "plugin": "@nx/dotnet",
      "options": {
        "build": {
          "targetName": "build"
        },
        "test": {
          "targetName": "test"
        },
        "watch": {
          "targetName": "serve",
          "args": ["run"]
        },
        "solutionFile": "{npmScope}.nx-dotnet.sln"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "previewTargetName": "serve",
        "testTargetName": "test",
        "typecheckTargetName": "typecheck"
      }
    }
  ]
}
