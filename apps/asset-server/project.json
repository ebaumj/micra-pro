{
  "name": "asset-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/asset-server/",
  "projectType": "application",
  "tags": ["type:app"],
  "targets": {
    "deploy": {
      "executor": "@micra-pro/workspace-extensions:deploy",
      "options": {
        "sshTarget": {
          "target": "micra",
          "user": "micra"
        },
        "paths": {
          "origin": "apps/asset-server/.output/*",
          "destination": "/usr/lib/micra-pro/asset-server/"
        },
        "affectedServices": ["remote-asset-server.service"]
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt build",
        "cwd": "{workspaceRoot}/apps/asset-server"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nuxt dev --port 3001",
        "cwd": "{workspaceRoot}/apps/asset-server"
      }
    }
  }
}
