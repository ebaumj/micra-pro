{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MicraPro": {
    "Backend": {
      "IncludeExceptionDetails": true
    },
    "AssetManagement": {
      "Infrastructure": {
        "LocalFileServerFolder": "../../tmp/local-asset-server",
        "LocalFileServerDomain": "http://localhost:3010",
        "RemoteFileServerDomain": "http://localhost:3001"
      }
    },
    "Shared": {
      "Infrastructure": {
        "UpdateDestination": "../../tmp/updater/dist",
        "UpdatePublicKey": "bin/Debug/net8.0/crypto/update-public-key.pem"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=bin/database.db"
  }
}
