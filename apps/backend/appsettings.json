{
  "urls": "http://localhost:5232;http://localhost:5240",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MicraPro": {
    "Backend": {
      "IncludeExceptionDetails": false,
      "FrontendSourceLocation": "/usr/lib/micra-pro/frontend"
    },
    "AssetManagement": {
      "Infrastructure": {
        "LocalFileServerFolder": "/mnt/localdata/micra-pro/local-assets/",
        "LocalFileServerDomain": "http://localhost:3010",
        "JwtIssuer": "MicraPro",
        "JwtTokenLifeTimeInMinutes": "2",
        "JwtUploadTokenLifeTimeInMinutes": "5",
        "Audience": "MicraProAssetServer"
      }
    },
    "Shared": {
      "Infrastructure": {
        "WifiAdapter": "wlan0",
        "BluetoothAdapter": "hci0",
        "BrewPaddleRelaisGpio": 15,
        "SystemVersion": "0.3.3",
        "AllowUpdates": true,
        "UpdateDestination": "/mnt/localdata/micra-pro/backend/",
        "UpdateFileName": "mp-apps.zip",
        "UpdatePublicKey": "crypto/update-public-key.pem"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/mnt/localdata/micra-pro/backend/database.db"
  }
}
