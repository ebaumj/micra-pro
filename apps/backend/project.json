{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend",
  "tags": ["type:app"],
  "targets": {
    "build": {
      "command": "dotnet publish",
      "outputs": ["{projectRoot}/bin", "{projectRoot}/obj"],
      "options": {
        "args": [
          "-c=Release --no-dependencies -p:PublishSingleFile=true --sc -r=linux-arm64 -p:PublishReadyToRun=true"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "command": "dotnet watch run",
      "options": {
        "cwd": "{projectRoot}"
      }
    },
    "format": {
      "executor": "@micra-pro/workspace-extensions:csharpier"
    }
  }
}
