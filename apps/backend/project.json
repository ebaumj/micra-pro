{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend",
  "tags": ["type:app"],
  "targets": {
    "deploy": {
      "executor": "@micra-pro/workspace-extensions:deploy",
      "options": {
        "sshTarget": {
          "target": "micra",
          "user": "micra"
        },
        "paths": {
          "origin": "apps/backend/bin/Release/net8.0/linux-arm64/publish/*",
          "destination": "/usr/lib/micra-pro/backend/"
        },
        "affectedServices": ["backend.service"]
      }
    },
    "build": {
      "executor": "@nx-dotnet/core:publish",
      "outputs": ["{projectRoot}/bin", "{projectRoot}/obj"],
      "dependsOn": ["^build", "codegen", "^codegen"],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release",
          "runtime": "linux-arm64",
          "extraParameters": "-p:PublishSingleFile=true -p:SelfContained=true"
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug"
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "format": {
      "executor": "@micra-pro/workspace-extensions:csharpier"
    }
  }
}
